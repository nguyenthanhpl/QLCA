<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/layout.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    @RenderSection("header", required: false)

</head>
<body>

    <section class="clearfix header bg-danger">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Quản lý ăn ca</a>
                   
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Giao diện</a></li>
                                    <li><a class="dropdown-item" href="#">Người dùng</a></li>
                                    <li><a class="dropdown-item" href="#">Phòng ban</a></li>


                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Đăng ký ca ăn
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Cá nhân</a></li>
                                    <li><a class="dropdown-item" href="#">Tập thể</a></li>
                                    

                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Thống kê
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Cá nhân</a></li>
                                    <li><a class="dropdown-item" href="#">Theo ngày</a></li>
                                    <li><a class="dropdown-item" href="#">Theo Tháng</a></li>

                                </ul>
                            </li>

                        </ul>
                        <form class="nav-item dropdown">
                            <li class="nav-item">
                                <a class="nav-dangxuat" href="#">Đăng xuất</a>
                            </li>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="clearfix-maincontent py-5">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>
    <section class="clearfix-footer bg-gradient">
        <div class="container-fluid text-white text-center">
            <p> Create </p>
        </div>
    </section>
    @RenderSection("footer", required: false)
</body>
</html>
