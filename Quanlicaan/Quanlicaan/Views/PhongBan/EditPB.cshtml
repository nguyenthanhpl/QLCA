@model Quanlicaan.PhongBan

@{
    ViewBag.Title = "Sửa thông tin phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/css/editnv.css" rel="stylesheet" />
}

<h2>Thông tin phòng ban</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        ID:
        <div class="col-md-10">
            @Html.DisplayFor(model => model.ID)
        </div>
    </div>

    <div class="form-group">
        Tên phòng ban
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenPB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenPB, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="btn-bottom" style="padding: 20px 12px">
            <div class="">
                <input type="submit" value="Lưu lại" class="btn" />
            </div>

            <div>
                @Html.ActionLink("Quay lại", "ShowAll")
            </div>
        </div>
    </div>
</div>
}

